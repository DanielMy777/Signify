			"name": "Detect Hands",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"const check_res_obj = (res)=>{\r",
							"    check_hand_rect_object(res.hands.handsRect);\r",
							"}\r",
							"const check_hand_rect_object = (hand_rect)=>{\r",
							"   pm.expect(hand_rect).to.not.eq(undefined);\r",
							"   pm.expect(hand_rect.v).to.not.eq(undefined);\r",
							"   pm.expect(hand_rect.h).to.not.eq(undefined);\r",
							"   pm.expect(hand_rect.w).to.not.eq(undefined);\r",
							"   pm.expect(hand_rect.x).to.not.eq(undefined);\r",
							"   pm.expect(hand_rect.y).to.not.eq(undefined);\r",
							"\r",
							"   for(const propt in hand_rect)\r",
							"   {\r",
							"       pm.expect(hand_rect[propt]).to.be.a('number');\r",
							"   }\r",
							"}\r",
							"\r",
							"const checkNumberInRange =(number,start,end)=>{\r",
							"   pm.expect(number).to.be.a('number');\r",
							"   pm.expect(number).above(start - 1);\r",
							"   pm.expect(number).below(end + 1);\r",
							"}\r",
							"pm.test(\"recived handRect object\", function () {\r",
							"   const res = pm.response.json();\r",
							"   check_res_obj(res);\r",
							"});\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
